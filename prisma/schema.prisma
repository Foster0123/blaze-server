generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                Int                 @id @default(autoincrement())
  name              String?
  username          String?
  email             String              @unique
  password          String?
  created_at        DateTime            @default(now())
  updated_at        DateTime            @updatedAt()
  todo              Todo[]
  AdditionalDetails AdditionalDetails[]
}

model Todo {
  id         Int      @id @default(autoincrement())
  title      String
  descripton String?
  status     Boolean?
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt()
  author     User?    @relation(fields: [authorId], references: [id])
  authorId   Int?
}

model AdditionalDetails {
  id       Int     @id @default(autoincrement())
  webite   String?
  location String?
  phone    Int
  address  String?
  company  String?
  author   User?   @relation(fields: [authorId], references: [id])
  authorId Int?
}